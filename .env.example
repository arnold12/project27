# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini
OPENAI_EMBEDDING_MODEL=text-embedding-3-large

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=us-east-1
AWS_BUCKET=policy-documents
# AWS_ENDPOINT_URL=  # Optional: for local S3-compatible services (e.g., LocalStack)

# Vector Database Configuration
VECTOR_DB=faiss  # Options: "faiss" or "mongo"
# MongoDB Configuration (only if VECTOR_DB=mongo)
# MONGODB_URI=mongodb+srv://user:password@cluster.mongodb.net/
# MONGODB_DB_NAME=policy_docs
# MONGODB_COLLECTION=embeddings

# FAISS Configuration (only if VECTOR_DB=faiss)
FAISS_INDEX_PATH=./data/faiss_index

# Chunking Configuration
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
MIN_CHUNK_SIZE=500
MAX_CHUNK_SIZE=1500

# Summarization Configuration
SUMMARY_TEMPERATURE=0.3
MAX_TOKENS=2000

# QA/Hallucination Check Configuration
SIMILARITY_THRESHOLD=0.7

# Application Configuration
APP_NAME=Policy Document Summarization Assistant
APP_VERSION=1.0.0
DEBUG=False
MAX_FILE_SIZE_MB=30

# Storage paths
LOCAL_STORAGE_PATH=./data/documents
CHUNKS_STORAGE_PATH=./data/chunks
